<Window
	x:Class="CustomTitleBarPOC.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:CustomTitleBarPOC"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
	xmlns:vm="clr-namespace:CustomTitleBarPOC.ViewModel"
	xmlns:model="clr-namespace:CustomTitleBarPOC.Model"
	Title="MainWindow"
	Width="800"
	Height="450"
	AllowsTransparency="True"
	WindowStyle="None"
	mc:Ignorable="d"
	d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True, Type=vm:MainViewModel}">
	<Grid Background="Transparent">
		<Border
			Background="White"
			BorderBrush="Black"
			BorderThickness="1">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="30" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>

				<Grid Background="LightBlue">
					<i:Interaction.Behaviors>
						<model:MouseDownBehavior Command="{Binding DragWindowCommand}" />
					</i:Interaction.Behaviors>
					<TextBlock
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						FontSize="14"
						Foreground="Black"
						Text="My Custom Title Bar" />
				</Grid>

				<Grid Grid.Row="1">
					<Label Content="Hello Prime"/>
				</Grid>
			</Grid>
		</Border>
	</Grid>
</Window>
